
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@common/*": ["node_modules/common/lib/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}