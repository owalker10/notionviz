{
    "name": "notionviz",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "cd client && npm run start",
        "serve": "cd functions && npm run serve",
        "build-frontend": "cd client && npm run build",
        "build-server": "cd functions && npm run build",
        "build": "npm run build-frontend && npm run build-server",
        "deploy": "firebase deploy --only functions,hosting",
        "build-and-deploy": "npm run build-frontend && npm run build-server",
        "unhost": "firebase hosting:disble",
        "del-func": "firebase functions:delete app",
        "panic": "npm run unhost && npm run del-func"
    }
}